/* order/user/order.wxss */
.gen_main_view{
  background: #f2f2f2;
}
.gen_main_break{
  width: 100%;
  height: 15rpx;
}
.gen_class_view{
  background: #ffffff;
  border-bottom: solid 1px #f2f2f2;
}
.gen_table_main{
  width: 92%;
  margin: 0px auto;
  display: flex;
  color: #999999;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  letter-spacing: 2rpx;
  font-size: 16px;
  align-items: center;
}
.gen_table_payment{
  width: 92%;
  margin: 0px auto;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  letter-spacing: 2rpx;
  font-size: 16px;
  font-weight: bold;
  align-items: center;
}
.gen_table_left{
  width: 180rpx;
}
.gen_table_rightupload{
  width: 580rpx;
  display: flex;
}
.gen_right_number{
  color: #000000;
  font-size: 14px;
  letter-spacing: 0rpx;
  line-height: 60rpx;
  margin-right: 10rpx;
}
.gen_table_right{
  width: 580rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: #000000;
}
.gen_table_right2{
  width: 580rpx;
  display: flex;
  color: #000000;
}
.gen_payment_view{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.gen_table_rightpayment{
  color: #ff6900;
}
.gen_table_uploaded{
  color: #ff6900;
  border-radius: 30rpx;
  border: solid 1px #ff6900;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
}
.gen_table_input{
  text-align: right;
  width: 500rpx;
}
.gen_table_inputfee{
  width: 140rpx;
  text-align: right;
  margin-right: 10rpx;
}
.gen_table_inputtime{
  width: 200rpx;
  margin-right: 10rpx;
  text-align: right;
}
.gen_text_time{
  
}
.gen_fee_text{
  font-size: 14px;
  line-height: 50rpx;
}
.gen_class_button{
  margin-top: 60rpx;
  padding-bottom: 300rpx;
}
.gen_button_view{
  width: 70%;
  margin: 0px auto;
  text-align: center;
  border-radius: 10rpx;
  color: #ffffff;
  letter-spacing: 4rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #ff6900;
}
.gen_block_main{
  position: absolute;
  width: 100%;
  opacity: 0.5;
  background: #000000;
}
/* 验证身份 */
.order_verify_view{
  position: absolute;
  width: 100%;
}
.order_verify_table{
  width: 80%;
  margin: 0px auto;
  height: 580rpx;
  margin-top: 300rpx;
  background: #ffffff;
  border-radius: 10rpx;
  padding-top: 30rpx;
}
.verify_table_main{
  width: 86%;
  margin: 0px auto;
}
.verify_table_left{
  width: 70rpx;
}
.verify_table_group{
  display: flex;
  font-size: 16px;
  margin-top: 50rpx;
  padding-bottom: 15rpx;
  border-bottom: solid 1px #999999;
}
.verify_left_img{
  width: 36rpx;
  height: 36rpx;
}
.verify_table_right{
  width: 460rpx;
}
.verify_table_right2{
  width: 460rpx;
  display: flex;
}
.verify_code_view{
  width: 50%;
  height: 50rpx;
  text-align: center;
  border-radius: 20rpx;
  line-height: 50rpx;
  background: #dadada;
  color: #666666;
  font-size: 14px;
}
.verify_button_view{
  width: 60%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0px auto;
  margin-top: 70rpx;
  border-radius: 10rpx;
  text-align: center;
  background: #ff6900;
  color: #ffffff;
}
.canNotPostOrder{
  background: #dadada;
  color: #ffffff;
}
.gen_share_button{
  width: 400rpx;
  background: #ff6900;
  color: #ffffff;
  font-size: 16px;
}