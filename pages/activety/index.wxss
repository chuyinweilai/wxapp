/* new styles */
.act_search{
  height: 88rpx;
  padding: 16rpx 36rpx;
  margin-bottom: 4rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #CBCBCB;
}
.act_search_box{
  display: flex;
  flex: 1;
  align-items: center;
  height: 56rpx;
  border-radius: 28rpx;
  background: #F6F6F6;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.act_search_input{
  display: flex;
  flex: 1;
  font-size:24rpx;
}
.act_search_plac{
  font-size:24rpx;
  font-weight:normal;
  color:#999;
  opacity:0.74;
}

.act_view{
  padding: 35rpx 20rpx;
  box-sizing: border-box;
}
.act_group_headtitle{
  font-size:32rpx;
  font-family:Microsoft YaHei;
  font-weight:bold;
  color:#333333;
  padding-left: 13rpx;
  margin-top: 31rpx 0 29rpx;
}
.act_group_list{
  display: grid;
  grid-template-columns: auto auto;
  text-align: center;
  justify-items: center;
  /* grid-template-rows: auto auto; */
}

.act_group_box{
  margin-bottom: 31rpx;
}
.act_group_view{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width:345rpx;
  height:290rpx;
  background:#ffffff;
  box-shadow:0px 0px 10px 0px rgba(64, 64, 64, 0.102);
  border-radius:8rpx;
  padding: 12rpx 12rpx 0;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.act_group_img{
  width:321rpx;
  height:180rpx;
  border-radius:8px 8px 0px 0px;
}
.act_group_title{
  display: flex;
  width: 95%;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 21rpx 0 15rpx;
}
.act_group_titlecontent{
  font-size: 24rpx;
  line-height: 24rpx;
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-align: left;
  text-overflow: ellipsis;
}
.act_group_titleprice{
  font-size:28rpx;
  line-height: 28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:#f57424;
}

.act_group_time{
  font-size:20rpx;
  line-height: 20rpx;
  font-family:SourceHanSansCN;
  font-weight:bold;
  color:rgba(153,153,153,1);
}