/* pages/activity/detail.wxss */
.main_view{
  width: 100%;
  /* max-width: 750rpx; */
  overflow-x: hidden;
  /* padding: 28rpx 0rpx; */
  padding: 28rpx 40rpx;
  box-sizing: border-box;
}
.act_detail_head{
  width: 100%;
  height: 400rpx;
  padding: 0 20px;
  box-sizing: border-box;
}
.act_detail_headimg{
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
}

.act_detail_mess{
  padding: 28rpx 30rpx;
  margin-top: 30rpx;
  background: #eee;
  border-radius: 15rpx;
  box-shadow: 10rpx -10rpx 10rpx #dfdfdf;

}

.act_detail_cont{
  width: 100%;
  padding: 28rpx 0;
  box-sizing: border-box;
}
.act_detail_top{
  display: flex;
  font-size: 34rpx;
  line-height: 34rpx;
  font-weight:bold;
  flex-direction: row;
  margin-bottom: 29rpx;
  justify-content: space-between;
}
.act_top_title{
  color:#333333;
}
.act_top_price{
  color:#ff7220;
  flex-wrap: nowrap;
  width: 230rpx;
  font-size: 30rpx;
  text-align: right;
}
.act_price_unit{
  font-size: 20rpx;
}
.act_detail_time{
  margin: 22rpx 0;
  font-size:24rpx;
  font-family:'SourceHanSansCN-Regular','Adobe Heiti Std R';
  font-weight:normal;
  color:#f87423;
}
.act_cont_title{
  display: flex;
  font-size: 32rpx;
  font-weight:bold;
  color:#333333;
  margin-bottom:30rpx;
}
.title_icon{
  margin-right: 4px;
  width: 7rpx;
  height: 42rpx;
  background: #ff6b00;
}
.act_cont_content{
  font-size:26rpx;
  color:#999999;
  line-height: 2;
  background: #eee;
  padding: 0 30rpx;
  border-radius: 15rpx;
  letter-spacing: 4rpx;
  white-space:pre-wrap;
  box-shadow: 10rpx -10rpx 10rpx #dfdfdf;
}
.act_detail_bottom{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #999;
  line-height: 2.2;
}
.act_bottom_title{
  text-align:justify;
  text-justify:distribute-all-lines;/*ie6-8*/
  text-align-last:justify;/* ie9*/
  -moz-text-align-last:justify;/*ff*/
  -webkit-text-align-last:justify;/*chrome 20+*/
  width: 190rpx;
}
.act_bottom_content{
  color: #666;
  white-space: pre-wrap;
  letter-spacing: 4rpx;
  width: 500rpx;
}