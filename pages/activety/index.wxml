<view class='main_view act_view'>
  <view class='act_group_box' wx:for="{{activetyType}}" wx:key="listPart" data-id="{{item.ID}}">
    <view class="act_group_headtitle">{{item.TypeName}}</view>
    <view class='act_group_list'>
      <view class='act_group_view' wx:for="{{activetyList[item.ID]}}" wx:key="list" data-id="{{item.ID}}" bindtap='gotoDetail'>
        <image class='act_group_img' src="{{item.BannerImageUrl}}" mode="aspectFill"></image>
        <view class='act_group_title'>
          <view class='act_group_titlecontent'>{{item.Title}}</view>
          <view class='act_group_titleprice'>
           <span style="font-size: 20rpx;">￥</span>{{item.Price}}
          </view>
        </view>
        <view class="act_group_time">活动时间：</view>
        <view class="act_group_time">{{item.ApplictionData}}</view>
      </view>
    </view>
  </view>
</view>

