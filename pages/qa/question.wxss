/* pages/qa/question.wxss */
.qa_question_view{
  font-size: 16px;
}
.qa_question_main{
  width: 90%;
  margin: 0px auto;
  margin-top: 20rpx;
}
.qa_question_type{
  margin-top: 15rpx;
  height: 70rpx;
  border-bottom: solid 1px #f7f9fa;
  display: flex;
}
.qa_question_typetitle{
  width: 90%;
}
.qa_question_typetitleword{
  color: #545454;
}
.qa_question_typevalue{
  color: #000000;
}
.qa_question_typeclick{
  width: 10%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.qa_question_contact{
  margin-top: 30rpx;
  height: 70rpx;
  border-bottom: solid 1px #f7f9fa;
  display: flex;
}
.qa_question_contactinput{
  width: 450rpx;
  font-size: 14px;
}
.qa_question_title{
  margin-top: 30rpx;
  height: 70rpx;
  border-bottom: solid 1px #f7f9fa;
}
.qa_question_titleinput{
  font-size: 16px;
  font-weight: bold;
}
.qa_question_content{
  margin-top: 30rpx;
  height: 400rpx;
}
.qa_function_button{
  width: 40%;
  display: flex;
}
.qa_function_audio{
  margin-right: 20rpx;
}
.qa_function_audioimg{
  width: 52rpx;
  height: 52rpx;
}
.qa_function_picture{
  
}
.qa_function_pictureimg{
  width: 52rpx;
  height: 52rpx;
}
.qa_question_contentinput{
  width: 100%;
  height: 400rpx;
}
.qa_question_function{
  width: 90%;
  margin: 0px auto;
  height: 100rpx;
  display: flex;
  border-top: solid 1px #f7f9fa;
  padding-top: 10rpx;
}
.qa_function_image{
  width: 40%;
}
.qa_function_post{
  width: 60%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.qa_function_anonymous{
  font-size: 14px;
  margin-top: 11rpx;
  color: #545454;
  display: flex;
}
.qa_function_anonymousselected{
  font-size: 14px;
  margin-top: 11rpx;
  color: #ff6900;
  display: flex;
}
