/* pages/ranking/index.wxss */
.rank_view_break{
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  padding: 16rpx 37rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #CBCBCB;
}

.head_view{
  /* padding-top: 46rpx; */
  background: #F6F6F6;
}
.text_search{
  position: absolute;
  left: 10%;
  font-size: 16px;
  color: #aaaaaa;
  width: 400rpx;
  height: 58rpx;
  display: flex;
  align-items: center;
}
.head_search{
  margin-left: 5%;
  width: 500rpx;
  height: 58rpx;
}
.icon_search{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.rank_view_search{
  width: 450rpx;
  height: 58rpx;
  background: #F6F6F6;
  display: flex;
  align-items: center;
  border-radius: 58rpx;
  padding: 0 29rpx;
}
.rank_search_input{
  display: flex;
  flex: 1;
  font-size: 32rpx;
  /* margin-left: 10rpx; */
}
.rank_search_placeholder{
  font-size: 32rpx;
  color: #999;
}
.picker{
  width: 150rpx;
  height: 56rpx;
  display: flex;
  justify-content: space-around;
  align-items:center;
  font-size: 28rpx;
  border: 1rpx solid #F57424;
  border-radius: 29rpx;
  color: #F57424;
}
.rank_search_icon{
  width: 20rpx;
  height: 12rpx;
}

.rank_group_viewbox{
  width: 710rpx;
  height: 180rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: url('https://testwx.taoraise.com/images/program/ranking/bg_rank_view.jpg');
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  margin: 30rpx auto 30rpx;
  padding: 10rpx 10rpx 15rpx;
  box-sizing: border-box;
}
.rank_group_view{
  display: flex;
  width: 460rpx;
  flex-direction: column;
  align-items: around;
  margin-left: 21rpx;
}
.rank_group_image{
  width:200rpx;
  height:126rpx;
}
.rank_group_new{
  width: 73rpx;
  height: 29rpx;
  line-height: 29rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 29rpx;
  background: #56C121;
  box-sizing: border-box;
  color: #fff;
}
.rank_group_hot{
  width: 73rpx;
  height: 29rpx;
  line-height: 29rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 29rpx;
  background: #F57424;
  box-sizing: border-box;
  color: #fff;
}
.rank_group_type{
  width: 90%;
  line-height: 2;
  color: #999999;
  font-size: 24rpx;
}
.rank_group_title{
  width: 90%;
  color: #000000;
  font-size: 28rpx;
}